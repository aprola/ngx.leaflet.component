{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2015",
            "dom"
        ],
        "types": [
            "node",
            "jasmine",
            "leaflet",
            "geojson"
        ]
    },
    "awesomeTypeScriptLoaderOptions": {
        "useWebpackText": true
    },
    "files": [
        "./ngx.leaflet.components.ts"
    ],
    "include": [
        "./ngx.leaflet.components.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}